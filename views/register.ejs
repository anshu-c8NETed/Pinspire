<% include ./partials/header.ejs %>
<body class="bg-gradient-to-br from-zinc-900 via-zinc-800 to-zinc-900 min-h-screen">
    <div class="w-full min-h-screen bg-gradient-to-br from-zinc-900 via-zinc-800 to-zinc-900 flex items-center justify-center px-4 py-8">
        <div class="w-full max-w-md bg-zinc-800/50 backdrop-blur-sm rounded-3xl p-8 shadow-2xl border border-zinc-700/50">
            <!-- Header with modern styling -->
            <div class="text-center mb-8">
                <h1 class="text-3xl font-bold bg-gradient-to-r from-white to-zinc-300 bg-clip-text text-transparent mb-2 leading-tight">
                    Create New Account
                </h1>
                <p class="text-zinc-400 text-sm">Join Pinspire to discover amazing ideas</p>
            </div>
            
            <form action="/register" method="post" class="space-y-5">
                <!-- Username Input -->
                <div class="relative">
                    <input 
                        class="w-full px-4 py-3 rounded-xl bg-zinc-700/50 text-white placeholder-zinc-400 border border-zinc-600/50 focus:outline-none focus:ring-2 focus:ring-red-500/50 focus:border-red-500 transition-all duration-300 hover:bg-zinc-700/70" 
                        type="text" 
                        name="username" 
                        placeholder="Username"
                        required
                    >
                </div>
                
                <!-- Email Input -->
                <div class="relative">
                    <input 
                        class="w-full px-4 py-3 rounded-xl bg-zinc-700/50 text-white placeholder-zinc-400 border border-zinc-600/50 focus:outline-none focus:ring-2 focus:ring-red-500/50 focus:border-red-500 transition-all duration-300 hover:bg-zinc-700/70" 
                        type="email" 
                        name="email" 
                        placeholder="Email address"
                        required
                    >
                </div>
                
                <!-- Full Name Input -->
                <div class="relative">
                    <input 
                        class="w-full px-4 py-3 rounded-xl bg-zinc-700/50 text-white placeholder-zinc-400 border border-zinc-600/50 focus:outline-none focus:ring-2 focus:ring-red-500/50 focus:border-red-500 transition-all duration-300 hover:bg-zinc-700/70" 
                        type="text" 
                        name="fullname" 
                        placeholder="Full name"
                        required
                    >
                </div>
                
                <!-- Password Input -->
                <div class="relative">
                    <input 
                        class="w-full px-4 py-3 rounded-xl bg-zinc-700/50 text-white placeholder-zinc-400 border border-zinc-600/50 focus:outline-none focus:ring-2 focus:ring-red-500/50 focus:border-red-500 transition-all duration-300 hover:bg-zinc-700/70" 
                        type="password" 
                        name="password" 
                        placeholder="Create password"
                        required
                    >
                </div>
                
                <!-- Submit Button -->
                <button 
                    type="submit" 
                    class="w-full py-3 px-6 bg-gradient-to-r from-red-600 to-red-700 hover:from-red-700 hover:to-red-800 text-white font-semibold rounded-full transition-all duration-300 transform hover:scale-[1.02] hover:shadow-lg hover:shadow-red-500/25 focus:outline-none focus:ring-2 focus:ring-red-500/50 active:scale-[0.98] mt-6"
                >
                    Create Account
                </button>
            </form>
            
            <!-- Terms and Privacy -->
            <div class="mt-6">
                <p class="text-xs text-zinc-400 text-center leading-relaxed">
                    By continuing, you agree to Pinterest's 
                    <a href="#" class="text-red-400 hover:text-red-300 transition-colors">Terms of Service</a> 
                    and acknowledge that you've read our 
                    <a href="#" class="text-red-400 hover:text-red-300 transition-colors">Privacy Policy</a>. 
                    <a href="#" class="text-red-400 hover:text-red-300 transition-colors">Notice at collection</a>.
                </p>
            </div>
            
            <!-- Login Link -->
            <div class="mt-8 text-center">
                <a 
                    href="/" 
                    class="text-zinc-300 hover:text-white text-sm font-medium transition-colors duration-300 hover:underline"
                >
                    Already have an account? <span class="text-red-400 hover:text-red-300">Login</span>
                </a>
            </div>
        </div>
    </div>
    
</body>
<script src="/javascripts/register.js"></script>
<% include ./partials/footer.ejs %>
