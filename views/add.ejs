<% include ./partials/header.ejs %>
<body class="bg-zinc-800">
    <!-- Modern Responsive Navbar -->
<nav class="fixed top-0 left-0 right-0 z-50 bg-zinc-900/95 backdrop-blur-md border-b border-zinc-700/50 shadow-lg">
        <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
            <div class="flex justify-between items-center h-16">
                <!-- Logo with Pinterest Image -->
                <div class="flex-shrink-0 flex items-center space-x-3">
                    <!-- Pinterest Logo Image -->
                    <div class="relative">
                        <div class="w-12 h-12 bg-white rounded-2xl flex items-center justify-center shadow-lg hover:shadow-xl transition-all duration-300 transform hover:scale-105 overflow-hidden">
                            <img 
                                src="https://i.pinimg.com/736x/60/9c/87/609c879e0ae5455963d7d1e370c06bad.jpg" 
                                alt="Pinterest Logo" 
                                class="w-full h-full object-cover"
                            />
                        </div>
                        <!-- Subtle glow effect -->
                        <div class="absolute inset-0 w-12 h-12 bg-red-500 rounded-2xl opacity-10 blur-lg animate-pulse"></div>
                    </div>
                    
                    <!-- Stacked Text -->
                    <div class="flex flex-col items-start">
                        <h3 class="text-xl font-bold text-white leading-tight">
                            Pinterest
                        </h3>
                        <span class="text-xs text-zinc-400 font-medium tracking-wide">
                            Discover Ideas
                        </span>
                    </div>
                </div>
                
                <!-- Desktop Navigation -->
                <div class="hidden md:block">
                    <div class="ml-10 flex items-baseline space-x-8">
                        <a href="/profile" class="text-zinc-300 hover:text-white px-3 py-2 rounded-md text-sm font-medium transition-all duration-300 hover:bg-zinc-800/50">
                            Profile
                        </a>
                        <a href="/feed" class="text-zinc-300 hover:text-white px-3 py-2 rounded-md text-sm font-medium transition-all duration-300 hover:bg-zinc-800/50">
                            Feed
                        </a>
                        <a href="/logout" class="bg-gradient-to-r from-red-600 to-red-700 hover:from-red-700 hover:to-red-800 text-white px-4 py-2 rounded-lg text-sm font-medium transition-all duration-300 transform hover:scale-105 shadow-lg hover:shadow-red-500/25">
                            Logout
                        </a>
                    </div>
                </div>
                
                <!-- Mobile menu button -->
                <div class="md:hidden">
                    <button id="mobile-menu-button" class="text-zinc-400 hover:text-white hover:bg-zinc-800 p-2 rounded-md transition-colors duration-300">
                        <svg class="h-6 w-6" stroke="currentColor" fill="none" viewBox="0 0 24 24">
                            <path class="menu-icon" stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16" />
                            <path class="close-icon hidden" stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12" />
                        </svg>
                    </button>
                </div>
            </div>
        </div>
        
        <!-- Mobile Navigation Menu -->
        <div id="mobile-menu" class="md:hidden hidden bg-zinc-900/98 backdrop-blur-lg border-t border-zinc-700/50">
            <div class="px-2 pt-2 pb-3 space-y-1 sm:px-3">
                <a href="/profile" class="text-zinc-300 hover:text-white block px-3 py-2 rounded-md text-base font-medium transition-all duration-300 hover:bg-zinc-800/50">
                    Profile
                </a>
                <a href="/feed" class="text-zinc-300 hover:text-white block px-3 py-2 rounded-md text-base font-medium transition-all duration-300 hover:bg-zinc-800/50">
                    Feed
                </a>
                <a href="/logout" class="bg-gradient-to-r from-red-600 to-red-700 text-white block px-3 py-2 rounded-md text-base font-medium mt-3 transition-all duration-300 hover:from-red-700 hover:to-red-800">
                    Logout
                </a>
            </div>
        </div>
    </nav>
    
    <!-- Main Content with top padding for fixed navbar -->
    <div class="w-full min-h-screen bg-gradient-to-br from-zinc-900 via-zinc-800 to-zinc-900 px-10 py-10 pt-24 text-white flex flex-col items-center">
        <div class="w-full max-w-md bg-zinc-800/50 backdrop-blur-sm rounded-2xl p-8 shadow-2xl border border-zinc-700/50">
            <h1 class="text-2xl font-bold text-center mb-3 bg-gradient-to-r from-white to-zinc-300 bg-clip-text text-transparent">Create a new post</h1>
            <hr class="border-zinc-600/50 mb-8">
            
            <form action="/createpost" method="post" enctype="multipart/form-data" class="flex flex-col space-y-6">
                <!-- File Upload with modern styling -->
                <div class="relative">
                    <input class="w-full px-4 py-3 rounded-xl bg-zinc-700/50 text-white border border-zinc-600/50 file:mr-4 file:py-2 file:px-4 file:rounded-lg file:border-0 file:bg-red-600 file:text-white file:font-medium file:cursor-pointer hover:file:bg-red-700 focus:outline-none focus:ring-2 focus:ring-red-500/50 focus:border-red-500 transition-all duration-300" type="file" name="postimage">
                </div>
                
                <!-- Title Input with floating effect -->
                <div class="relative">
                    <input class="w-full px-4 py-3 rounded-xl bg-zinc-700/50 text-white placeholder-zinc-400 border border-zinc-600/50 focus:outline-none focus:ring-2 focus:ring-red-500/50 focus:border-red-500 transition-all duration-300 hover:bg-zinc-700/70" type="text" placeholder="Enter your post title..." name="title">
                </div>
                
                <!-- Description Textarea with modern styling -->
                <div class="relative">
                    <textarea class="w-full h-32 px-4 py-3 rounded-xl bg-zinc-700/50 text-white placeholder-zinc-400 border border-zinc-600/50 resize-none focus:outline-none focus:ring-2 focus:ring-red-500/50 focus:border-red-500 transition-all duration-300 hover:bg-zinc-700/70" placeholder="Describe your post..." name="description"></textarea>
                </div>
                
                <!-- Submit Button with modern gradient -->
                <button type="submit" class="w-full py-3 px-6 bg-gradient-to-r from-red-600 to-red-700 hover:from-red-700 hover:to-red-800 text-white font-semibold rounded-xl transition-all duration-300 transform hover:scale-[1.02] hover:shadow-lg hover:shadow-red-500/25 focus:outline-none focus:ring-2 focus:ring-red-500/50 active:scale-[0.98]">
                    Share New Post
                </button>
            </form>
        </div>
    
</body>
<script src="/javascripts/add.js"></script>





<% include ./partials/footer.ejs %>