<% include ./partials/header.ejs %>
<link rel="stylesheet" href="/stylesheets/index.css">
<body class="min-h-screen">
    <div class="w-full min-h-screen bg-gradient-to-br from-zinc-900 via-zinc-800 to-zinc-900 flex items-center justify-center px-4 py-8">
        <!-- Login Form Container -->
        <div class="w-full max-w-md bg-zinc-800/50 backdrop-blur-sm rounded-3xl p-8 shadow-2xl border border-zinc-700/50">
            <!-- Header with modern styling -->
            <div class="text-center mb-8">
                <h1 class="text-3xl font-bold bg-gradient-to-r from-white to-zinc-300 bg-clip-text text-transparent mb-2 leading-tight">
                    Welcome to Pinspire
                </h1>
                <p class="text-zinc-400 text-sm">Sign in to discover amazing ideas</p>
            </div>
            
            <!-- Enhanced Flash Messages Container -->
            <div class="flash-container">
                <!-- Error Messages -->
                <% if(error && error.length > 0){ %>
                    <div class="flash-message error" id="flash-error">
                        <span><%= error %></span>
                        <button class="flash-dismiss" onclick="dismissFlash('flash-error')" aria-label="Dismiss">×</button>
                    </div>
                <% } %>
                
                <!-- Success Messages (for future use) -->
                <% if(typeof success !== 'undefined' && success && success.length > 0){ %>
                    <div class="flash-message success" id="flash-success">
                        <span><%= success %></span>
                        <button class="flash-dismiss" onclick="dismissFlash('flash-success')" aria-label="Dismiss">×</button>
                    </div>
                <% } %>
                
                <!-- Warning Messages (for future use) -->
                <% if(typeof warning !== 'undefined' && warning && warning.length > 0){ %>
                    <div class="flash-message warning" id="flash-warning">
                        <span><%= warning %></span>
                        <button class="flash-dismiss" onclick="dismissFlash('flash-warning')" aria-label="Dismiss">×</button>
                    </div>
                <% } %>
                
                <!-- Info Messages (for future use) -->
                <% if(typeof info !== 'undefined' && info && info.length > 0){ %>
                    <div class="flash-message info" id="flash-info">
                        <span><%= info %></span>
                        <button class="flash-dismiss" onclick="dismissFlash('flash-info')" aria-label="Dismiss">×</button>
                    </div>
                <% } %>
            </div>

            <form action="/login" method="post" class="space-y-5">
                <!-- Username Input -->
                <div class="relative">
                    <input 
                        class="w-full px-4 py-3 rounded-xl bg-zinc-700/50 text-white placeholder-zinc-400 border border-zinc-600/50 focus:outline-none focus:ring-2 focus:ring-red-500/50 focus:border-red-500 transition-all duration-300 hover:bg-zinc-700/70 shadow-sm" 
                        type="text" 
                        name="username" 
                        placeholder="Username or Email"
                        required
                    >
                </div>
                
                <!-- Password Input -->
                <div class="relative">
                    <input 
                        class="w-full px-4 py-3 rounded-xl bg-zinc-700/50 text-white placeholder-zinc-400 border border-zinc-600/50 focus:outline-none focus:ring-2 focus:ring-red-500/50 focus:border-red-500 transition-all duration-300 hover:bg-zinc-700/70 shadow-sm" 
                        type="password" 
                        name="password" 
                        placeholder="Password"
                        required
                    >
                </div>
                
                <!-- Forgot Password Link -->
                <div class="text-left">
                    <a 
                        href="#" 
                        class="text-sm text-red-400 hover:text-red-300 font-medium transition-colors duration-300 hover:underline"
                    >
                        Forgotten your password?
                    </a>
                </div>
                
                <!-- Login Button -->
                <button 
                    type="submit" 
                    class="w-full py-3 px-6 bg-gradient-to-r from-red-600 to-red-700 hover:from-red-700 hover:to-red-800 text-white font-semibold rounded-full transition-all duration-300 transform hover:scale-[1.02] hover:shadow-lg hover:shadow-red-500/25 focus:outline-none focus:ring-2 focus:ring-red-500/50 active:scale-[0.98] mt-6"
                    id="login-btn"
                >
                    Login
                </button>
            </form>
            
            <!-- Terms and Privacy -->
            <div class="mt-6">
                <p class="text-xs text-zinc-400 text-center leading-relaxed">
                    By continuing, you agree to Pinterest's 
                    <a href="#" class="text-red-400 hover:text-red-300 transition-colors font-medium">Terms of Service</a> 
                    and acknowledge that you've read our 
                    <a href="#" class="text-red-400 hover:text-red-300 transition-colors font-medium">Privacy Policy</a>. 
                    <a href="#" class="text-red-400 hover:text-red-300 transition-colors font-medium">Notice at collection</a>.
                </p>
            </div>
            
            <!-- Register Link -->
            <div class="mt-8 text-center">
                <a 
                    href="/register" 
                    class="text-zinc-300 hover:text-white text-sm font-medium transition-colors duration-300 hover:underline"
                >
                    Don't have an account yet? <span class="text-red-400 hover:text-red-300 font-semibold">Sign up</span>
                </a>
            </div>
        </div>
    </div>
    
<script src="/javascripts/index.js"></script>
</body>
<% include ./partials/footer.ejs %>